//passing the values instead of the variables in the methods
package biozonica.company;

public class Main {
    public static void main(String[] args) {
        boolean gameOver = true;
        int score = 800;
        int levelCompleted = 5;
        int bonus = 100;

        calculateScore(true, 800,5,100);

        calculateScore(true,10000,8,200);

    }
    public static void calculateScore(boolean gameOver, int score, int levelCompleted, int bonus){

        if(gameOver){
            int finalScore = score+(levelCompleted*bonus);
            finalScore+= 2000;
            System.out.println("Your final score was = "+finalScore);
        }
    }

}
****************************************************************************************************************************************
//Passing the values and variable without defining them.
package biozonica.company;

public class Main {
    public static void main(String[] args) {
        
        calculateScore(true, 800,5,100);

        calculateScore(true,10000,8,200);

    }
    public static void calculateScore(boolean gameOver, int score, int levelCompleted, int bonus){

        if(gameOver){
            int finalScore = score+(levelCompleted*bonus);
            finalScore+= 2000;
            System.out.println("Your final score was = "+finalScore);
        }
    }

}
****************************************************************************************************************************************
//Get our method do some calculation, send the value back to the method without (void) using the return and else
package biozonica.company;

public class Main {
    public static void main(String[] args) {
        boolean gameOver = true;
        int score = 800;
        int levelCompleted= 5;
        int bonus= 100;

        calculateScore(true, 800,5,100);

        calculateScore(true,10000,8,200);

    }
    public static int calculateScore(boolean gameOver, int score, int levelCompleted, int bonus){

        if(gameOver){
            int finalScore = score+(levelCompleted*bonus);
            finalScore+= 2000;
            System.out.println("Your final score was = "+finalScore);
            return finalScore;
        } else {
            return -1;     //or just:  return -1; 
        }
    }

}
***************************************************************************************************************************************
