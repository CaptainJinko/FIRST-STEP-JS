package biozonica.company;

public class Main {

    public static void main(String[] args) {
        // A mile is equal to 1.609344 kilomters
      double kilometer = (100*1.609344);
      int highScore = 50;

      if(highScore == 50){
          System.out.println("This an expression");
      }
    }
}

